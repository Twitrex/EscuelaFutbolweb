@model IEnumerable<EscuelaFutbolweb.Models.Equipo>

<h2>Lista de Equipos</h2>

<!-- Botón para crear un nuevo equipo -->
<a asp-action="NuevoEquipo" class="btn btn-success mb-3">Crear Nuevo Equipo</a>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Nombre del Equipo</th>
            <th>Categoría</th>
            <th>Entrenador</th>
            <th>Estado</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var equipo in Model)
        {
            <tr>
                <td>@equipo.NombreEquipo</td>
                <td>@(string.IsNullOrEmpty(equipo.Categoria) ? "Sin Categoría" : equipo.Categoria)</td>
                <td>@(string.IsNullOrEmpty(equipo.Entrenador) ? "Sin Entrenador" : equipo.Entrenador)</td>
                <td>@(equipo.Activo ? "Activo" : "Inactivo")</td>
                <td>
                    <!-- Botón para editar el equipo -->
                    <a asp-action="EditarEquipo" asp-route-id="@equipo.EquipoID" class="btn btn-primary btn-sm">Editar</a>

                    <!-- Si deseas agregar más acciones, como eliminar o asignar alumnos, puedes hacerlo aquí -->
                </td>
            </tr>
        }
    </tbody>
</table>

