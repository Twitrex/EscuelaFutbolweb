@model EscuelaFutbolweb.Models.Equipo

@{
    ViewData["Title"] = "Nuevo Equipo";
}

<h2>Nuevo Equipo</h2>

<!-- Formulario para crear un nuevo equipo -->
<form asp-action="NuevoEquipo" method="post">
    <div class="form-group">
        <label asp-for="NombreEquipo" class="control-label">Nombre del Equipo</label>
        <input asp-for="NombreEquipo" class="form-control" />
        <span asp-validation-for="NombreEquipo" class="text-danger"></span>
    </div>

    <!-- Categoría -->
    <div class="form-group">
        <label asp-for="CategoriaID" class="control-label">Categoría</label>
        <select asp-for="CategoriaID" class="form-control" asp-items="@(ViewBag.Categorias)">
            <option value="">Seleccione una Categoría</option>
        </select>
        <!-- No se necesita validación para este campo -->
    </div>

    <!-- Entrenador -->
    <div class="form-group">
        <label asp-for="EntrenadorID" class="control-label">Entrenador</label>
        <select asp-for="EntrenadorID" class="form-control" asp-items="@(ViewBag.Entrenadores)">
            <option value="">Seleccione un Entrenador</option>
        </select>
        <!-- No se necesita validación para este campo -->
    </div>

    <!-- Estado Activo (Oculto y asignado como verdadero por defecto) -->
    <input type="hidden" asp-for="Activo" value="true" />

    <!-- Botón para guardar el nuevo equipo -->
    <button type="submit" class="btn btn-success">Guardar</button>
    <a asp-action="Equipos" class="btn btn-secondary">Cancelar</a>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

